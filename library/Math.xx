/**
Math function library class.
\author Lukas Hermanns
*/
class Math {
	
	//! Math constant PI (~3.14).
	static const pi := 3.14159265358979
	
	//! Math constant E (~2.71).
	static const e := 2.71828182845905
	
	//! Returns the square of 'x'.
	static float sq(float x) {
		return x*x
	}
	
	//! Returns the square root of 'x'.
	static float sqrt(float x) {
		return Intrinsics.sqrt(x)
	}
	
	//! Returns the floating-pointer remainder of number/denom (rounded towards zero).
	static float fmod(float number, float denom) {
		return number % denom
	}
	
}
