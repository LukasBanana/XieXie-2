class Vector3 {
	
	init() {
	}
	init(float x, float y, float z) {
		this.x := x
		this.y := y
		this.z := z
	}
	
	float length() {
		return Math.sqrt(x*x + y*y + z*z)
	}
	
	Vector3 normalize() {
		float invLength := 1.0 / length()
		
		x *= invLength
		y *= invLength
		z *= invLength
		
		return this
	}
	
	Vector3 add(Vector3 rhs) {
		x += rhs.x
		y += rhs.y
		z += rhs.z
		return this
	}
	
	Vector3 sub(Vector3 rhs) {
		x -= rhs.x
		y -= rhs.y
		z -= rhs.z
		return this
	}
	
	float x, y, z
	
}

