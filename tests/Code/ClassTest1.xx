class IO {
	static void writeLine(String@ s) {
		Intrinsics.printLn(s.pointer())
	}
}

//[[final(test)]]
class Hello {
	init() {}
	init(String s) { _s := s }
	
	String _s
	
	//[[deprecated]]
	String hello()
	
	[[final]]
	void print() {
		IO.writeLine(hello())
	}
	
	protected String protProc() { return protVar }
	protected String protVar
	
	private String privProc() { return privVar }
	private String privVar
}

