class Widget {
	
	static const a := 1
	static const b := 2
	static const c := Widget.a + Widget.b
	
	static const d := false
	static const e := not Widget.d
	
	static int g_a := 16
	static int g_b
	
	static int test2(int x) {
		return x*2
	}
	
}

class Test {
	
	static int test1() {
		
		var x := Widget.c + Widget.g_a
		
		var e := Widget.e
		
		Widget.g_b++
		
		for int i := 0 ; i < 10 ; i++ {
			// registers must be stored here
			x += Widget.test2(i)
			// registers must be restored here
		}
		
		Widget.g_b++
		
		return x
		
	}
	
	static void main() {
		Test.test1()
	}
	
}

